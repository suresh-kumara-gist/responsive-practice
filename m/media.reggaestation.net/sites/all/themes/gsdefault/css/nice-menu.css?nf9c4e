  border-top: 0;
  float: left;
  margin-right: 0.667em;
}
ul.nice-menu a {
  padding: 0.5em;
  color: #c2c2c2;
  text-decoration: none;
}
ul.nice-menu a.active,
ul.nice-menu a:hover,
ul.nice-menu a:focus,
ul.nice-menu a:active,
