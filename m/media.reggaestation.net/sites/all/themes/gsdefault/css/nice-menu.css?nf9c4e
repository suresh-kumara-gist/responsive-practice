  color: #fff;
}
ul.nice-menu ul {
  top: 3em;
  left: -1px;
  border: 0;
  margin-right: 0;
  background: #1d1d1d;
  text-align: left;
  font-size: 1em;
}
ul.nice-menu ul li {
  width: 12.5em;
}

/*========== VERTICAL (left/right) menus ==========*/

/* This is the default width of all vertical menus. */
ul.nice-menu-right, ul.nice-menu-left,
